extend ./layouts/master.pug

block title
  title Tinh dầu 100 - Siêu thị tinh dầu thiên nhiên

block header
  include components/header.pug

block content
  main(role="main")
    .l-container
      .home-upper-section
        .home-upper-section__mega-menu
          nav.c-mega-menu.is-visible
            include ./components/mega-menu.pug
        .home-upper-section__banner
          +link()(class="home-upper-section__banner-link" ,title="Banner")
            +img(src="../assets/images/home-banner.jpg", alt="Banner")(class="home-upper-section__banner-image")
        .home-upper-section__products
          ul.l-product.l-product--column-3
            each i in [1, 2, 3, 4, 26, 30]
              li.l-product__item
                +link()(class="o-product", title="", target="_blank")
                  .o-product__image-wrapper
                    +img(`../assets/images/product-${i}.jpg`).o-product__image
                  .o-product__info
                    p.o-product__title Dầu massage bôi trơn 3S - Dành cho vợ chồng
                    .o-product__price
                      span.o-product__price-regular Giá: 235.000đ
                      span.o-product__price-sale KM: 230.000đ

      .home-primary-banner
        each i in [1, 2]
          +link()(title="Banner")
            +img(`../assets/images/primary-banner-${i}.jpg`, "Dầu massage bôi trơn 3S - Dành cho vợ chồng")

      .home-promotion
        section.home-promotion__omega.promotion-omega
          header.u-mb-1
            h3.home-promotion__heading.u-text-uppercase
              i.o-icon.o-icon--hot
              span.u-ml-1 Khuyến mại HOT

          .promotion-omega__body
            ul.promotion-omega__list
              each i in [1, 2, 3, 4]
                li.promotion-omega__item
                  +link()(class="promotion-omega__product")
                    .promotion-omega__image-wrapper
                      +img(`../assets/images/product-sale-${i}.jpg`, "Mua 3 tinh dầu oải hương , tặng 1 đèn xông tinh dầu")(class="promotion-omega__image")
                    .promotion-omega__date
                      span.promotion-omega__icon-wrapper.u-mr-1
                        i.o-icon.o-icon--calendar
                      span.promotion-omega__text Từ ngày 30/4 - 1/5
                    .promotion-omega__info
                      p.promotion-omega__title Mua 3 tinh dầu oải hương , tặng 1 đèn xông tinh dầu
                      .promotion-omega__price Giá: 200.000đ

        section.home-promotion__alpha
          header
            h3.home-promotion__heading.u-text-uppercase
              i.o-icon.o-icon--hot
              span.u-ml-1 Sản phẩm bán chạy
          .promotion-alpha__body
            ul.promotion-alpha__list
              each i in [1, 2, 3, 4]
                li.promotion-alpha__item
                  +link()(class="promotion-alpha__product")
                    .promotion-alpha__image-wrapper
                      +img(`../assets/images/product-small-${i}.jpg`, "Tinh dầu Massage body")(class="promotion-alpha__image")
                    .promotion-alpha__info
                      p.promotion-alpha__title Tinh dầu Massage body
                      .promotion-alpha__price Giá: 100.000đ

      - const categories = [{"title": "Tinh dầu","menuItems": ["Dùng cho tóc","Dùng cho cơ thể","Dùng cho tay chân","Dùng cho trẻ em","Dùng cho người lớn","Dùng cho người già","Dùng cho tâm linh","Dùng cho phòng khách","Dùng cho phòng ngủ","Dùng cho phòng WC","Dùng cho sinh hoạt gia đình","Dùng đuổi con trùng","Dùng cho phòng khách","Dùng cho phòng ngủ","Dùng cho phòng WC"],"images": [6, 7, 8, 9, 10, 11],"banner": "../assets/images/banner-4.jpg"},{"title": "Đèn xông bằng điện","menuItems": ["Đèn xong tinh dầu bằng gốm","Đèn xông tinh dầu bằng sứ","Đèn xông tinh dầu bằng gỗ","Máy phun sương tinh dầu","Máy phun sương tinh dầu ô tô","Đèn xong tinh dầu bằng gốm","Đèn xông tinh dầu bằng sứ","Đèn xông tinh dầu bằng gỗ"],"images": [12, 13, 14, 15, 16, 17],"banner": "../assets/images/banner-5.jpg","catBanner":  "../assets/images/cat-banner-1.jpg"},{"title": "Đá massage","menuItems": ["Đèn xong tinh dầu bằng gốm","Đèn xông tinh dầu bằng sứ","Đèn xông tinh dầu bằng gỗ","Máy phun sương tinh dầu","Máy phun sương tinh dầu ô tô","Đèn xong tinh dầu bằng gốm","Đèn xông tinh dầu bằng sứ","Đèn xông tinh dầu bằng gỗ"],"images": [18, 19, 20, 21, 22, 23],"banner": "../assets/images/banner-6.jpg","catBanner":  "../assets/images/cat-banner-2.jpg"}];

      each cat in categories
        .home-category
          .home-category__info
            h3.o-heading-one
              +link()(class="o-heading-one__text") #{cat.title}

          .home-category__banner
            +link()
              +img(`${cat.banner}`, "Banner")

          .home-category__products
            ul.l-product
              each i in cat.images
                li.l-product__item
                  +link()(class="o-product", title="", target="_blank")
                    .o-product__image-wrapper
                      +img(`../assets/images/product-${i}.jpg`).o-product__image
                    .o-product__info
                      p.o-product__title Dầu massage da mặt nhạy cảm( trầm hương)
                      .o-product__price
                        span.o-product__price-regular 160.000đ
                        span.o-product__price-sale 230.000đ






